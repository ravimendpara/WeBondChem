<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.activity.AdminManageDistributorOrderActivity">


    <include
        android:id="@+id/include"
        layout="@layout/layout_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:contentPadding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spLoginType"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:dropDownVerticalOffset="42dp"
                    android:minHeight="35dp"
                    android:textSize="13sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:id="@+id/svAdminPointReport"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.webond.chemicals.custom_class.TextViewBoldFont
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:background="@drawable/admin_report_corner"/>

                        <com.webond.chemicals.custom_class.TextViewBoldFont
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Code"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:background="@drawable/admin_report_corner"/>

                        <com.webond.chemicals.custom_class.TextViewBoldFont
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Total Point"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:background="@drawable/admin_report_corner"/>

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <LinearLayout
                            android:id="@+id/llAdminPointDynamicReportMainRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </HorizontalScrollView>

        </ScrollView>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rvAdminPointReport"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_margin="12dp"-->
<!--            android:scrollbars="none"-->
<!--            android:visibility="gone"-->
<!--            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />-->

        <include
            android:id="@+id/llLoading"
            layout="@layout/loading_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/llNoDateFound"
            layout="@layout/layout_no_data_found"
            android:visibility="gone" />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extFabPointRepoert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Download"
        android:textColor="@color/white"

        app:icon="@drawable/ic_baseline_cloud_download_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.97" />








</androidx.constraintlayout.widget.ConstraintLayout>