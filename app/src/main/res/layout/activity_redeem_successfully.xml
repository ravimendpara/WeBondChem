<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common_activity.RedeemSuccessfullyActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_redeem_sucessfully"/>

    <com.webond.chemicals.custom_class.TextViewMediumFont
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:lineSpacingExtra="0.2dp"
        android:text="Congratulation your\nredemption is\nsuccessful"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoToRedemption"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="  Go to Redemption  "
        android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>